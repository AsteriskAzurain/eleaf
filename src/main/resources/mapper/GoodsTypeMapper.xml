<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eleaf.dao.mapper.GoodsTypeMapper">
	<!-- 缓存配置 -->
	<cache eviction="LRU" flushInterval="30000" size="512"
		readOnly="true" />
	
	<resultMap id="e_goods_type" type="com.eleaf.entity.GoodsType">
		<!-- public -->
		<id property="id" column="id" />
		<result property="hiddenFlag" column="hidden_flag" />
		<result property="createTime" column="create_time" />
		<result property="creator" column="creator" />
		<result property="modifyTime" column="modify_time" />
		<result property="modifier" column="modifier" />
		<result property="memo" column="memo" />
		<!-- private -->
		<result property="type_name" column="type_name" />
		
	</resultMap>
	
	<sql id="insert_columns">
		id,
		type_name,
		hidden_flag
	</sql>
	
	<!-- 商品模糊查询 -->
	<select id="search" resultMap="e_goods_type">
		SELECT *
		FROM e_goods_type
		WHERE type_name LIKE CONCAT('%', #{keywords}, '%')
		<if test="appearOnly">
			AND hidden_flag = 0
		</if>
	</select>
	
</mapper>